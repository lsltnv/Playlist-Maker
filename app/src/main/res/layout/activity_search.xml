<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_search"
        style="@style/toolbar">

        <ImageView
            android:id="@+id/ic_back_button_searchAct"
            style="@style/toolbar_icon"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/toolbar_title_searchAct"
            style="@style/toolbar_text"
            android:text="@string/search" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/inputEditText"
            style="@style/edit_Text"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:paddingEnd="11dp"
            android:src="@drawable/delete"
            android:visibility="gone"
            app:tint="@color/editText_SearchAct_color" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/placeholderImage"
            style="@style/placeholderImage"
            android:src="@drawable/ic_internet_error"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/placeholderText"
            style="@style/placeholderText"
            tools:text="ddddddddddddddddddd"
            android:visibility="gone"/>

        <Button
            android:id="@+id/placeholderButton"
            style="@style/refresh_button"
            android:text="@string/refresh"
            android:textAllCaps="false"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>