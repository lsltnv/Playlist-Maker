<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_search"
        style="@style/toolbar">

        <ImageView
            android:id="@+id/ic_back_button_searchAct"
            style="@style/toolbar_icon"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/toolbar_title_searchAct"
            style="@style/toolbar_text"
            android:text="@string/search" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/inputEditText"
            style="@style/edit_Text"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:imeOptions="actionDone"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:paddingEnd="11dp"
            android:src="@drawable/delete"
            android:visibility="gone"
            app:tint="@color/editText_SearchAct_color" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/trackHistoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/searchHistoryTitle"
            style="@style/searchHistoryTitle"
            android:text="@string/searchHystory"
            android:textColor="@color/color_refresh_button"
            android:textSize="19sp"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            />

        <!-- Тут история -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/clearHistoryButton"
            style="@style/refresh_button"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/clearHistoryButton"
            android:textAllCaps="false"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/placeholderImage"
            style="@style/placeholderImage"
            android:src="@drawable/ic_internet_error"
            android:visibility="gone" />

        <TextView
            android:id="@+id/placeholderText"
            style="@style/placeholderText"
            android:visibility="gone"
            tools:text="Проблемы с интернетом" />

        <Button
            android:id="@+id/placeholderButton"
            style="@style/refresh_button"
            android:text="@string/refresh"
            android:textAllCaps="false"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>