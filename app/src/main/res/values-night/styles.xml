<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/corner_radius_20dp</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:layout_marginBottom">@dimen/button_space_16dp</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconTint">@color/colorOnSecondary</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="settings_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="icon_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="tint">@color/colorOnPrimary</item>
        <item name="android:layout_marginEnd">@dimen/padding_16dp</item>
    </style>

    <style name="settings_frame_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>


    <!--Только тулбар/ попрвавить-->
    <style name="toolbar">
        <item name="android:tint">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="icon_back_dark_mode">
        <item name="tint">#FFFFFF</item>"
    </style>

    <style name="edit_Text">
        <item name="android:background">#FFFFFF</item>
        <item name="android:drawableStart">@drawable/ic_search_act</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">@color/editText_SearchAct_color</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:paddingStart">11dp</item>

        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textColorHint">@color/editText_SearchAct_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>
</resources>