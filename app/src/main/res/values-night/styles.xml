<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/corner_radius_20dp</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:layout_marginBottom">@dimen/button_space_16dp</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconTint">@color/colorOnSecondary</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="settings_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="icon_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="tint">@color/colorOnPrimary</item>
        <item name="android:layout_marginEnd">@dimen/padding_16dp</item>
    </style>

    <style name="settings_frame_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>


    <style name="toolbar">
        <item name="android:tint">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>

    <style name="toolbar_icon">
        <item name="tint">#FFFFFF</item>"
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="toolbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="edit_Text">
        <item name="android:background">@drawable/background</item>
        <item name="android:drawableStart">@drawable/ic_search_act</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="drawableTint">@color/editText_SearchAct_color</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textColorHint">@color/editText_SearchAct_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="search_activity_rv_artworkUrl100">
        <item name="android:layout_width">@dimen/dimen_45dp</item>
        <item name="android:layout_height">@dimen/dimen_45dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="search_activity_rv_trackName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="search_activity_rv_artistName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
    </style>

    <style name="ic_dot_and_forward">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">@color/colorOnPrimary</item>
    </style>

    <style name="search_activity_rv_trackTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">8</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
    </style>
    <style name="refresh_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/ic_internet_error</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/color_refresh_button_text</item>

    </style>

    <style name="placeholderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">102dp</item>
    </style>

    <style name="placeholderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginTop">@dimen/padding_16dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color_refresh_button</item>
    </style>
</resources>